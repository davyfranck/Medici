<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#111111"
android:orientation="vertical" android:padding="0dp">


    <ImageView
        android:id="@+id/navigationbar"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/navigationbar"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />


    <ImageView
        android:id="@+id/paint_catalogue_banner"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="131dp"
        android:background="@drawable/paint_catalogue_banner"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <ImageView
        android:id="@+id/paint_inventory_banner"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="378dp"
        android:background="@drawable/paint_inventory_banner"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />



    <Button
        android:id="@+id/backbutton"
        android:layout_width="37.50dp"
        android:layout_height="37.50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/backbutton_dark" />

    <Button
        android:id="@+id/menubutton"
        android:layout_width="37.50dp"
        android:layout_height="37.50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="346dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/ic_menu_black_24dp" />

    <Button
        android:id="@+id/camerabutton"
        android:layout_width="80.13dp"
        android:layout_height="80.13dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/camerabutton" />

    <TextView
        android:id="@+id/paintcatalogue_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="280dp"
        android:text="Paint Catalogue"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/paintcatalogue_content"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="300dp"
        android:text="Explore over 1000 paints across leading manufacturers, view paint equivalents and generate custom colour schemes"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/paintinventory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="528dp"
        android:text="Paint Inventory and Wishlist"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/paintinventory_content"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="548dp"
        android:text="Keep track of your stock and view your paint wishlist"
        android:textColor="#FFFFFF" />


</RelativeLayout>